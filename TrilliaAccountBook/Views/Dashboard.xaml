<UserControl x:Class="TrilliaAccountBook.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Background="White">
        <StackPanel Grid.Column="2" 
                    Grid.Row="1"
                    Width="200">
            <Button Content="Register Journal" Height="50" FontSize="16" Margin="4" Command="{Binding RegisterJournalCommand}" />
            <Button Content="B/S" Height="50" FontSize="16" Margin="4" Command="{Binding BalanceSheetCommand}" />
            <Button Content="P/L" Height="50" FontSize="16" Margin="4" Command="{Binding ProfitLossCommand}"/>
            <Button Content="" Height="50" FontSize="16" Margin="4" Command="{Binding InvoiceCommand}"/>

        </StackPanel>

    </Grid>
</UserControl>
